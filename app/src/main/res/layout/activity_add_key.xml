<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="14dp"
    tools:context="eqpineda.dooraccesssystem.AddKey"
    android:weightSum="1">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/new_key_id"
        android:hint="@string/activity_add_key_input_authstring"
        android:maxLength="16"
        android:textSize="14sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/key_desc_id"
        android:hint="@string/activity_add_key_input_desc"
        android:maxLength="32"
        android:textSize="14sp" />
    
    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/key_notes"
        android:hint="@string/activity_add_key_input_notes"
        android:textSize="14sp"
        android:layout_weight="0.30"
        android:gravity="top"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_activity_add_key"
        android:onClick="addKey" />

</LinearLayout>
